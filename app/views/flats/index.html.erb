<div class="bg-body border p-3">
  <h3>All Our Flats</h2>
  <div class="card d-flex flex-row">
    <% @flats.each do |flat| %>
      <div class="card-body" style="width: 10rem;">
        <img class="img-thumbnail" src="https://via.placeholder.com/150" alt="Card image cap">
        <h5 class="card-title"> <%= flat.name %> </h5>
        <p class="card-text"> <%= flat.address %> </p>
        <p class="card-text"> <%= flat.description %> </p>
        <i class="fa-solid fa-euro-sign"> <%= flat.price_per_night %></i>
        <i class="fa-solid fa-people-group"> <%= flat.number_of_guests %> </i>
        <div class="card-footer">
          <%= link_to "More info", flat_path(flat), class: "btn btn-outline-info btn-sm" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-warning btn-sm" %>
          <%= link_to "Delete",
            flat_path(flat),
            class: "btn btn-outline-danger btn-sm",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </div>
      </div>
    <% end %>
  </div>
</div>
